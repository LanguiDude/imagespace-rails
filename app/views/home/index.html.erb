

    <div class="container">
        <div class="row">
          <div class="span9">
            <%= bootstrap_flash %>
            
          </div>
          <div class="span12 home">
            
            <div id="fullscreen_bg" class="fullscreen_bg"/>

				<div class="container">

					<form class="form-signin">
						<h1 class="form-signin-heading text-muted">Sign In</h1>
						<input type="text" class="form-control" id="email-input" placeholder="Email address" required="" autofocus="">
						<input type="bottompassword" class="form-control" id="password-input" placeholder="Password" required="">
						<button class="btn btn-lg btn-primary btn-block" id="sign_in" type="submit">
							Sign In
						</button>
					</form>

			

				<div class="container">

					<form class="form-signin" accept-charset="UTF-8" action="/users" class="new_user" method="post">
						<h1 class="form-signin-heading text-muted">Register</h1>
						<input type="text" class="form-control" name="user[email]" type="text" id="email-input" placeholder="Email address" required="" autofocus="">
						<input type="midpassword" name="user[password]" type="password" class="form-control" id="password-input" placeholder="Password" required="">
						<input type="bottompassword" name="user[password_confirmation]" type="password" class="form-control" id="password-input" placeholder="Confirm Password" required="">
						<button class="btn btn-lg btn-primary btn-block" id="register" type="submit">
							Register
						</button>
					</form>

				</div>
        </div><!--/row-->
        
	</div>
				

      <footer>
        <p>&copy; ImageSpace Inc 2014</p>
      </footer>

    </div> <!-- /container -->

